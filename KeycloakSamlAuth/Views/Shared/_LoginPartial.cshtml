@if (((System.Security.Claims.ClaimsIdentity)User.Identity).IsAuthenticated)
{
    @if (User.Identity.Name != null)
    {
        <span class="navbar-text" style="margin-right:10px;">Hello, @User.Identity.Name!</span>
    }
    else
    {
        <span class="navbar-text" style="margin-right:10px;">Hello</span>
    }

    @using (Html.BeginForm("Logout", "Auth"))
    {
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Login", "Auth", new { returnUrl = Context.Request.Path })">Login</a>
        </li>
    </ul>
}
